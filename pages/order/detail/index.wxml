<view class="container">
    <view class="sec-wrap">
        <view class="order-status">
            <view class="icon-box">
                <image wx:if="{{order.status==-1}}" class="icon" src="/images/order-details/icon-ddgb.png"></image>
                <image wx:elif="{{order.status==0}}" class="icon" src="/images/order-details/icon-ddfk.png"></image>
                <image wx:elif="{{order.status==1}}" class="icon" src="/images/order-details/icon-ddfh.png"></image>
                <image wx:elif="{{order.status==2}}" class="icon" src="/images/order-details/icon-ddsh.png"></image>
                <image wx:elif="{{order.status==3 || order.status==4}}" class="icon"
                       src="/images/order-details/icon-jycg.png"></image>
            </view>
            <view class="right-text">
                <view class="status red">{{order.status_name}}</view>
                <view class="des" hidden="true">请于11时59分59秒内付款，超时订单将自动关闭</view>
            </view>
        </view>
        <view class="address-sec">
            <view class="icon-box">
                <image class="icon" src="/images/order-details/icon-address.png"></image>
            </view>
            <view class="right-box">
                <view class="name-tel">{{order.address.linkMan}} {{order.address.mobile}}</view>
                <view class="text">
                    {{order.address.address}}
                </view>
            </view>
        </view>
        <block wx:if="{{order.shipper}}">
            <view wx:if="{{order.logistics_traces}}" class="wuliu-box">
                <view class="icon-box">
                    <image class="icon" src="/images/order-details/icon-wuliu.png"></image>
                </view>
                <view class="right-text" bindtap="wuliuDetailsTap" data-id="{{order.id}}">
                    <view class="order-number">快递单号：{{order.tracking_number}}</view>
                    <block wx:if="{{order.logistics_traces}}">
                        <view class="wuliu-text">
                            {{order.logistics_traces[0].event}}
                        </view>
                        <view class="wuliu-date">{{order.logistics_traces[0].event_time}}
                        </view>
                    </block>
                </view>
                <view class="arrow-right">
                    <image class="arrow" src="/images/arrow-right.png"></image>
                </view>
            </view>
            <view wx:else class="wuliu-box">
                <view class="icon-box">
                    <image class="icon" src="/images/order-details/icon-wuliu.png"></image>
                </view>
                <view class="right-text">
                    <view class="order-number">快递单号：{{order.tracking_number}}</view>
                    <view class="wuliu-text">暂无物流信息</view>
                </view>
            </view>

        </block>
    </view>
    <view class="product-list">
        <view class="list-title">商品信息</view>
        <form bindsubmit="submitReputation" report-submit="true">
            <block wx:for-items="{{order.items}}" wx:key="{{index}}">
                <view class="a-product">
                    <view class="img-box">
                        <image src="{{item.product_image}}" class="img"/>
                    </view>
                    <view class="text-box">
                        <view class="arow arow01">
                            <view class="product-name">{{item.product_name}}</view>
                            <view class="product-price">¥ {{item.item_price}}</view>
                        </view>
                        <view class="arow">
                            <view class="product-label">{{item.item_name}}</view>
                            <view class="product-num">x {{item.amount}}</view>
                        </view>
                    </view>
                </view>
                <view class="btn-row" wx:if="{{order.status==3}}">
                    <view class="section section_gap">
                        <view style="margin-top:35rpx;margin-bottom:35rpx;">评价：</view>
                        <radio-group name="goodReputation{{index}}">
                            <label style="margin-right:35rpx;"><radio value="2" checked/>好评
                            </label>
                            <label style="margin-right:35rpx;"><radio value="1"/>中评
                            </label>
                            <label style="margin-right:35rpx;"><radio value="0"/>差评
                            </label>
                        </radio-group>
                    </view>
                    <view class="row-box" style="margin-top:35rpx">
                        <view class="row-label">备注</view>
                        <input name="orderProductId{{index}}" value="{{item.id}}" style="display:none;"/>
                        <textarea name="goodReputationRemark{{index}}" style="margin-top:35rpx;width:100%;"
                                  value="非常愉快的一次购物！"/>
                    </view>
                </view>
            </block>
            <view class="btn-row" wx:if="{{order.status==3}}">
                <button class="confirm-btn" formType="submit">提交评价</button>
            </view>
        </form>
        <form bindsubmit="confirmBtnTap" report-submit="true">
            <view class="btn-row" wx:if="{{order.status==2}}">
                <button class="confirm-btn" formType="submit">确认收货</button>
            </view>
        </form>
    </view>
    <view class="peisong-way" hidden="true">
        <view class="row-box">
            <view class="row-label">配送方式</view>
            <view class="right-text">顺丰快递</view>
        </view>
        <view class="row-box">
            <view class="row-label">留言</view>
            <view class="right-text">
                <input name="remark" type="text" class="liuyan" placeholder="如需留言请输入"/>
            </view>
        </view>
    </view>
    <view class="product-info">
        <view class="row-box">
            <view class="row-label">商品金额</view>
            <view class="right-text">¥ {{order.fee}}</view>
        </view>
        <view class="row-box">
            <view class="row-label">运费</view>
            <view class="right-text">+ ¥ {{order.logistics_fee}}</view>
        </view>
        <view class="row-box">
            <view class="row-label">应付总额</view>
            <view class="right-text">¥ {{order.fee+order.logistics_fee}}</view>
        </view>
    </view>
</view>